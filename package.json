{
  "name": "cognito-srp-helper",
  "version": "1.0.1",
  "description": "A helper for SRP authentication in AWS Cognito",
  "author": "Simon McAllister",
  "license": "Apache-2.0",
  "private": false,
  "repository": "https://github.com/simonmcallister0210/cognito-srp-helper",
  "homepage": "https://github.com/simonmcallister0210/cognito-srp-helper",
  "keywords": [
    "aws",
    "aws-cognito",
    "cognito",
    "helper",
    "srp",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/simonmcallister0210/cognito-srp-helper/issues"
  },
  "type": "module",
  "files": [
    "dist/**"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p config/tsconfig.cjs.json && echo '{ \"type\": \"commonjs\" }' > dist/cjs/package.json",
    "build:esm": "tsc -p config/tsconfig.esm.json && echo '{ \"type\": \"module\" }' > dist/esm/package.json",
    "build:types": "tsc -p config/tsconfig.types.json",
    "format": "prettier 'src/**/*.ts' --write",
    "lint": "tsc -p config/tsconfig.lint.json && eslint -c config/eslintrc.json src/**/*.ts",
    "test": "jest -c config/jest.config.json",
    "test:unit": "jest -c config/jest.config.json src/__tests__/unit",
    "test:integration": "jest -c config/jest.config.json src/__tests__/integration",
    "test:clear": "jest --clear-cache"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/jest": "^29.2.0",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/lodash.omit": "^4.5.7",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "aws-sdk": "^2.1248.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.25.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "jest": "^29.2.1",
    "lint-staged": "^13.0.3",
    "lodash.clonedeep": "^4.5.0",
    "lodash.omit": "^4.5.0",
    "prettier": "^2.7.1",
    "randexp": "^0.5.3",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/crypto-js": "3.1.47",
    "@types/jsbn": "1.2.30",
    "@types/node": "^18.11.11",
    "buffer": "^6.0.3",
    "crypto-js": "4.1.1",
    "jsbn": "1.1.0"
  }
}
